{
  "manifest_version": 3,
  "name": "NihonGo Chat Application",
  "description": "A chat application with real-time translation capabilities.",
  "version": "1.0",

  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title":"click to open panel",
    "default_icon":"icon.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel","activeTab", "storage", "tabs"]
}